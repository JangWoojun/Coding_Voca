<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/course_box"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            android:text="프로그래밍 코스 초보자"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/level_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="쉬움"
                android:textColor="@color/point_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/word_count_text"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:background="@drawable/round_main_banner"
                android:backgroundTint="#FFEBF0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF6905"
                android:text="단어 22개"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:id="@+id/update_date_text"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#B8B8D2"
            android:text="최종 업데이트 2023년 5월 14일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>