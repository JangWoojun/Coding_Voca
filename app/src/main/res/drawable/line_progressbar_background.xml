<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#F4F3FD" />
            <stroke
                android:width="1dp"
                android:color="#F4F3FD" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="20dp" />
                <gradient android:endColor="#FF5106"
                       android:startColor="#F4F3FD" />
            </shape>
        </clip>
    </item>
</layer-list>
